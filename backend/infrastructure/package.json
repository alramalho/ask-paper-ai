{
  "name": "infrastructure",
  "version": "0.1.0",
  "bin": {
    "infrastructure": "src/main.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "diff": "cdk diff --profile hippo",
    "prebuild-backend-zip": "rm -rf ../src_dependencies && rm -rf ../src.zip",
    "build-backend-zip": "cd .. && pip install -t src_dependencies -r requirements.txt && (cd src_dependencies; zip ../src.zip -r .) && (cd src; zip ../src.zip -u . -r) ",
    "presynth": "yarn build-backend-zip",
    "synth": "echo '\n️\\0033[43;1m ⚠ Consider running `yarn diff` to check differences ⚠\\0033[0m️\n️' &&  rm -rf cdk.out && cdk synth",
    "deploy": "cdk deploy --profile hippo",
    "fast-deploy": "yarn synth && yarn deploy --require-approval never --all"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "10.17.27",
    "@types/prettier": "2.6.0",
    "aws-cdk": "2.35.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "typescript": "~3.9.7"
  },
  "dependencies": {
    "aws-cdk-lib": "2.35.0",
    "constructs": "^10.0.0",
    "dotenv": "^16.0.3",
    "source-map-support": "^0.5.21"
  }
}
