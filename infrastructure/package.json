{
  "name": "infrastructure",
  "version": "0.1.0",
  "bin": {
    "infrastructure": "src/main.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "diff": "cdk diff --profile hippo",
    "build-backend-zip": "(cd ../backend/scripts; chmod +x build.sh; sh ./build.sh)",
    "presynth": "yarn build-backend-zip",
    "synth": "echo '\n️\\0033[43;1m ⚠ Consider running `yarn diff` to check differences ⚠\\0033[0m️\n️' &&  rm -rf cdk.out && cdk synth",
    "deploy": "cdk deploy --profile hippo",
    "no-build-fast-deploy": "cdk synth && cdk deploy --require-approval never --all --profile hippo",
    "fast-deploy": "yarn synth && yarn deploy --require-approval never --all",
    "build-local": "yarn build-backend-zip && cdklocal bootstrap",
    "deploy-local": "cdklocal synth --local && cdklocal deploy --require-approval never --all"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.6",
    "@types/prettier": "2.7.2",
    "aws-cdk": "2.67.0",
    "aws-cdk-local": "^2.17.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  },
  "dependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "2.67.0-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "2.67.0-alpha.0",
    "aws-cdk-lib": "2.67.0",
    "constructs": "^10.1.270",
    "dotenv": "^16.0.3",
    "source-map-support": "^0.5.21"
  }
}
